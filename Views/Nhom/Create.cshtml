@model Demo.Models.tbl_Nhom
@{
    Layout = null;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FromCreateNhom" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IDNhom)
    @Html.HiddenFor(model => model.SoThanhVien)
    <div class="form-horizontal">
        <h4>tbl_Nhom</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TenNhom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNhom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNhom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.TextAreaFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })*@
                <textarea class="form-control col-md-10" id="GhiChu" name="GhiChu" style="resize:block"></textarea>
                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lock, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @*@Html.EditorFor(model => model.Lock, new { htmlAttributes = new { @class = "form-control" } })*@
                    <select id="Lock" name="Lock" class="form-control">
                        <option value="false">Đang hoạt động</option>
                        <option value="true">Khóa</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.Lock, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="btnCreateNhom" value="Lưu" class="btn btn-primary" />
                <input type="button" id="btnCapNhat" value="Cập nhật" class="btn btn-default" />
            </div>
        </div>
    </div>
}

