@model IEnumerable<Demo.Models.tbl_Users>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html>
<body>
    <div class="container">

        <button type="button" class="btn btn-primary" onclick="fnOpenModalThemNV()">Thêm mới</button>

        <div id="divLoadDSNV">
            @Html.Action("LoadDSNV", "Users")
        </div>

        @*Modal thêm chi tiết cho nhóm*@
        <div class="modal fade" id="ModelCreate" role="dialog" aria-labelledby="" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="">Thêm nhân viên</h4>
                    </div>
                    <div class="modal-body" id="divCreate">
                        @Html.Action("Create", "Users")
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    </div>
                </div>
            </div>
        </div>

        @*Modal sửa chi tiết cho nhóm*@
        <div class="modal fade" id="ModelEdit" role="dialog" aria-labelledby="" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="">Sửa thông tin nhân viên</h4>
                    </div>
                    <div class="modal-body">
                        <div id="divEditNV">

                        </div>

                  
                </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section scripts{
    <script src="~/Scripts/Users/Users.js?v=@DateTime.Now"></script>
}
